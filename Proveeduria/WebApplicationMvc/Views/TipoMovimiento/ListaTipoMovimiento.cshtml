    <script type="text/javascript">
        var tabtipomov;


        function CargaDatos()
        {
            var $this = $(this);
   
            $.ajax({
                    type: "POST",
                    traditional: true,
                    datatype: "json",
                    data: null,
                    contentType: 'application/json; charset=utf-8',
                    url: "/TipoMovimiento/GetListaTipoMovimiento",
                    beforeSend: function () {
                        run_waitMe($(".panel-body"), 'bounce', 'Cargando...');
                    },
                    success: function (data) {
                        if (data.error) {
                            swal({
                                type: 'error',
                                text: 'Error al cargar los datos.',
                                confirmButtonColor: '#00BCD4'
                            });
                        }
                        else {
                            var items = data.items;
                            if (items.length > 0) {
                                var editar = `<button id="butEditar" type="button" class="btn btn-default btn-xs clsedit">
                                                    <i class="fa fa-pencil"></i>
                                                </button>`;
                                var eliminar = `<button id="butEliminar" type="button" class="btn btn-default btn-xs">
                                                    <i class="fa fa-trash"></i>
                                                </button>`;
                                for (var i = 0; i < items.length; i++) {
                                    tabtipomov.row.add([
                                        items[i].ID_TIPO_MOVIMIENTO,
                                        items[i].NOMBRE,
                                        editar + eliminar
                                    ]).draw();
                                }
                            }
                            else {
                                swal({
                                    type: 'info',
                                    text: 'No se encontraron resultados con los datos proporcionados.',
                                    confirmButtonColor: '#00BCD4'
                                });
                            }
                        }
                        $(".panel-body").waitMe('hide');
                        $this.button('reset');
                    },
                    error: function (XMLHttpRequest, textStatus, errorThrown) {
                        $(".panel-body").waitMe('hide');
                        $this.button('reset');
                        swal({
                            type: 'error',
                            text: 'Error al cargar los datos.',
                            confirmButtonColor: '#00BCD4'
                        });
                    },
                    complete: function () {
                        calcularTotales();
                    }
                });
            
        }


        $(document).ready(function () {

            tabtipomov = $('#tabTipoMov').DataTable({
                "paging": false,
                "searching": false,
                "columnDefs": [{
                    "targets": 2,
                    "orderable": false
                }]
            });

            CargaDatos();    

            tabtipomov.on('click', 'button.clsedit', function (e) {
                var row = $(this).closest('tr');
                var parametros = JSON.stringify(
                    {
                        //pid: row.ID_TIPO_MOVIMIENTO,
