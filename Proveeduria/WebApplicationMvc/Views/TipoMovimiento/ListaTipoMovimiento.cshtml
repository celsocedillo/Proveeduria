@model IEnumerable<Proveduria.Models.EPRTA_TIPO_MOVIMIENTO>

@*@{
        ViewBag.Title = "ListaTipoMovimiento";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@


@section styles {
    <!-- DataTables -->
    <link rel="stylesheet" href=@Url.Content("/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css")>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Tipos de Movimientos
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <p>
        <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "InvMedida")'">
            <i class="fa fa-plus"></i>  CREAR
        </button>
    </p>

    <!-- begin panel -->
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-heading-btn">
            </div>
            <h4 class="panel-title">
                <i class="fa fa-list" aria-hidden="true"></i>  MEDIDAS
            </h4>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <table id="tabTipoMov" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ID_TIPO_MOVIMIENTO)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NOMBRE)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ID_TIPO_MOVIMIENTO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMBRE)
                                </td>
                                <td>
                                    <button id="butEditar" type="button" class="btn btn-default btn-xs">
                                        <i class="fa fa-pencil"></i>
                                    </button>
                                    <button id="butEliminar" type="button" class="btn btn-default btn-xs">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end panel -->

    <div class="modal fade" id="dlgTipoMov">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"><span id="titAgrActivo"></span></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-10">
                                <input id="txtIdTipoMov" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nombre</label>
                            <div class="col-sm-10">
                                <input id="txtNombre" type="text" class="form-control" />
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button id="butAcepta" type="button" class="btn btn-primary btn-sm">Grabar</button>
                    <button id="butCancela" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>


</section>

@section scripts {
    <!-- DataTables -->
    <script src=@Url.Content("/Content/bower_components/datatables.net/js/jquery.dataTables.min.js")></script>
    <script src=@Url.Content("/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js")></script>
    <script type="text/javascript" src=@Url.Content("/Scripts/App/InvMedida.js")></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#tabTipoMov').DataTable({
                "paging": false,
                "searching": false,
                "columnDefs": [{
                    "targets": 2,
                    "orderable": false
                }]
            });

            $('#tabTipoMov tbody').on('click', '[id*=butEditar]', function (e) {
                $("#dlgTipoMov").modal('toggle');
                //var data = tab.row($(this).parents('tr')).data();
                var data = $("#tabTipoMov").DataTable().row($(this).parents('tr')).data();
                var parametros = JSON.stringify(
                    {
                        pid: data.ID_TIPO_MOVIMIENTO,
                        pid: data[0]
                    });

                $.ajax({
                dataType: 'JSON',
                url: '@Url.Action("GetTipoMovimiento", "TipoMovimiento")',
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data:  parametros,
                success: function (result)
                 {

                    $("#txtIdTipoMov").val(result.data.ID_TIPO_MOVIMIENTO);
                    $("#txtNombre").val(result.data.NOMBRE);
                 },
                error: function (result) {
                    alert("Error :" + result.responseText);
                    $("#msgMain").html(result.responseText);
                    $("#msgMain").addClass("alert alert-danger");
                }
                });

            });
        });
    </script>
}