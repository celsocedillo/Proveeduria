
@{
                /**/

                ViewBag.Title = "ListaMovimiento";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Movimientos
    </h1>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-12">
            <div class="box box-default collapsed-box">
                <div class="box-header with-border">
                    <h3 class="box-title">Filtros</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <form id="frmFiltro" class="form-horizontal">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="col-sm-2">Fecha Inicio :</label>
                                <div class="col-sm-4">
                                    <input id="txtFecIni" type="text" class="form-control" />
                                </div>
                                <label class="col-sm-2">Fecha Fin :</label>
                                <div class="col-sm-4">
                                    <input id="txtFecFin" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="col-sm-2">Tipo Movimiento:</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("selIdTipoMovimiento", new SelectList(ViewBag.ltipo_movimiento, "Value", "Text"))
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
                <div class="box-footer">
                    <button type="button" id="btnConsultar" class="btn btn-default btn-sm btn-flat" >
                        <i class="fa fa-refresh"></i>
                        Consultar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- begin panel -->
    <div class="box">
        <div class="box-body no-padding">
            <div class="btn-group">
                <button id="butNuevo" class="btn btn-primary btn-sm btn-flat">
                    <i class="fa fa-plus"></i>  Nuevo
                </button>
            </div>
            <table id="tabMovimiento" class="table table-striped hover compact">
                <thead>
                    <tr>
                        <th>
                            Año
                        </th>
                        <th style="width:40px;">
                            Número
                        </th>
                        <th style="width:180px;">
                            Movimiento
                        </th>
                        <th style="width:300px;">
                            Observacion
                        </th>
                        <th>
                            Estado
                        </th>
                        <th>
                            UsuaSolic.
                        </th>
                        <th>
                            Solicitado
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>
    <!-- end panel -->



</section>

@section scripts {

    <script type="text/javascript" src=@Url.Content("/Scripts/App/ListaMovimiento.js")></script>
    <script type="text/javascript">


        $(document).ready(function () {
            ListaMovimiento.init();
        });


    </script>
}



