@model IEnumerable<Proveduria.Models.EPRTA_GRUPO>

@*@{
    ViewBag.Title = "ListaGrupo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@

@section styles {
    <!-- DataTables -->

}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Grupos
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <p>
    </p>

    <!-- begin panel -->
    <div class="box">
        <div class="box-body no-padding">
            <div class="btn-group">
                <button id="butNuevoGrupo" class="btn btn-primary btn-xs btn-flat">
                    <i class="fa fa-plus"></i>  Nuevo
                </button>
            </div>
            <table id="tabGrupo" class="table table-striped hover compact">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Código
                        </th>
                        <th>
                            Grupo
                        </th>
                        <th>
                            Cuenta contable
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- end panel -->

    <div class="modal fade" id="dlgGrupo">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"><span id="titAgrActivo"></span></h4>
                </div>
                <div class="modal-body">
                    <form id="frmGrupo" class="form-horizontal" data-parsley-validate>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">ID :</label>
                            <div class="col-sm-9">
                                @*<input id="txtIdTipoMov" type="text" class="form-control" />*@
                                <span id="lblIdGrupo"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Código :</label>
                            <div class="col-sm-9">
                                <input id="txtCodigo" type="text" class="form-control" style="text-transform:uppercase" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nombre :</label>
                            <div class="col-sm-9">
                                <input id="txtNombre" type="text" class="form-control" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Cuenta Contable :</label>
                            <div class="col-sm-9">
                                <input id="txtCuentaContable" type="text" class="form-control" style="text-transform:uppercase" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Estado :</label>
                            <div class="col-sm-9">
                                <select id="sltEstado" class="form-control" required>
                                    <option value="A" selected>Activo</option>
                                    <option value="I">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="butAcepta" type="button" class="btn btn-primary btn-sm" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Grabando...">Grabar</button>
                    <button id="butCancela" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</section>

@section scripts {
    <!-- DataTables -->
    <script type="text/javascript" src=@Url.Content("/Scripts/App/Grupo.js")></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ready(function () {
                Grupo.init();
            });
        });   
    </script>
}

