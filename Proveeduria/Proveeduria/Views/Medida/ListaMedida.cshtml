@model IEnumerable<Proveduria.Models.EPRTA_MEDIDA>

@{
    ViewBag.Title = "ListaMedida";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles {
    <!-- DataTables -->
    @*<link rel="stylesheet" href=@Url.Content("/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css")>*@
}

<style>
    /*.lblMsg {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 13px;
        font-weight: bold;
    }*/
    .registro_inactivo {
        background-color: #fccfcf;
    }
</style>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Medidas
        @*<small>Control panel</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">   
    <!-- begin panel -->
    <div class="box">
        <div class="box-body no-padding">
            <div class="btn-group">
                <button id="butNuevoMedida" class="btn btn-primary btn-xs btn-flat">
                    <i class="fa fa-plus"></i>  Nuevo
                </button>
                <button id="butRequisicion" class="btn btn-primary btn-xs btn-flat">
                    <i class="fa fa-file-pdf-o" aria-hidden="true"></i>  Req. Bodega
                </button>
                <button id="butEgreso" class="btn btn-primary btn-xs btn-flat">
                    <i class="fa fa-file-pdf-o" aria-hidden="true"></i>  Egr. Bodega
                </button>
                <button id="butCorte" class="btn btn-primary btn-xs btn-flat">
                    <i class="fa fa-file-pdf-o" aria-hidden="true"></i>  Corte Inv
                </button>
                <button id="butExcel" class="btn btn-primary btn-xs btn-flat">
                    <i class="fa fa-table" aria-hidden="true"></i>  Excel
                </button>
            </div>
            @*<table id="tabMedida" class="compact stripe dataTable hover">*@
            <table id="tabMedida" class="table table-striped hover compact">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>
    </div>
    <!-- end panel -->

    <div class="modal fade" id="dlgMedida">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"><span id="titAgrActivo">Medida</span></h4>
                </div>
                <div class="modal-body">
                    <form id="frmMedida" class="form-horizontal" data-parsley-validate>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-10">
                                @*<input id="txtIdMedida" type="text" class="form-control" />*@
                                <span id="lblIdMedida"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nombre</label>
                            <div class="col-sm-10">
                                <input id="txtNombre" type="text" class="form-control" style="text-transform:uppercase" required />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="butAcepta" type="button" class="btn btn-primary btn-sm" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Grabando...">Grabar</button>
                    <button id="butCancela" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>


</section>

@section scripts {
    <!-- DataTables -->
    @*<script src=@Url.Content("/Content/bower_components/datatables.net/js/jquery.dataTables.min.js")></script>
        <script src=@Url.Content("/Content/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js")></script>*@
    <script type="text/javascript" src=@Url.Content("/Scripts/App/Medida.js")></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $("#butRequisicion").on("click", function () {
                window.location.href = "/Medida/ExportPdf";
            });
            $("#butEgreso").on("click", function () {
                window.location.href = "/Medida/ExportEgreso";
            });
            $("#butCorte").on("click", function () {
                window.location.href = "/Medida/ExportCorte";
            });
            $("#butExcel").on("click", function () {
                window.location.href = "/Medida/ExportToExcel";
            });
            Medida.init();
        });

    </script>
}
