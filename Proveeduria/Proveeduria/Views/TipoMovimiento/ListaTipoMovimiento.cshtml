        ViewBag.Title = "ListaTipoMovimiento";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@


@section styles {
    <!-- DataTables -->
    @*<link rel="stylesheet" href=@Url.Content("/Content/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css")>*@
    

}

<style>
    /*.lblMsg {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        font-size: 13px;
        font-weight: bold;
    }*/
    .registro_inactivo {
        background-color: #fccfcf;
    }
</style>


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Tipos de Movimientos
        @*<small>Control panel</small>*@
    </h1>
    @*<ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>*@
</section>

<!-- Main content -->
<section class="content">

    <p>
    </p>

    <!-- begin panel -->
    <div class="box">
        <div class="box-body no-padding">
            <div class="btn-group">
                <button id="butNuevoTipoMov" class="btn btn-primary btn-xs btn-flat" >
                    <i class="fa fa-plus"></i>  Nuevo
                </button>
            </div>
            @*<table id="tabTipoMov" class="compact stripe dataTable hover">*@
            <table id="tabTipoMov" class="table table-striped hover compact">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Ingreso/Egreso
                        </th>
                        <th>
                            Estado
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>
    </div>
    <!-- end panel -->

    <div class="modal fade" id="dlgTipoMov">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title"><span id="titAgrActivo"></span></h4>
                </div>
                <div class="modal-body">
                    <form id="frmTipoMov" class="form-horizontal" data-parsley-validate>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ID</label>
                            <div class="col-sm-10">
                                @*<input id="txtIdTipoMov" type="text" class="form-control" />*@
                                <span id="lblIdTipoMov"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nombre</label>
                            <div class="col-sm-10">
                                <input id="txtNombre" type="text" class="form-control" style="text-transform:uppercase" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ingreso/Egreso</label>
                            <div class="col-sm-10">
                                <select id="sltIngEgr" class="form-control" required>
                                    <option value="I" selected>Ingreso</option>
                                    <option value="E">Egreso</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Estado</label>
                            <div class="col-sm-10">
                                <select id="sltEstado" class="form-control" required>
                                    <option value="A" selected>Activo</option>
                                    <option value="I">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button id="butAcepta" type="button" class="btn btn-primary btn-sm" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Grabando...">Grabar</button>
                    <button id="butCancela" type="button" class="btn btn-default btn-sm" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>


</section>

@section scripts {
    <!-- DataTables -->
    
    <script type="text/javascript" src=@Url.Content("/Scripts/App/TipoMovimiento.js")></script>
    <script type="text/javascript">
  

        $(document).ready(function () {
            TipoMovimiento.init();   
        });


    </script>
}