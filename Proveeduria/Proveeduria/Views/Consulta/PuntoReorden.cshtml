@{
    ViewBag.Title = "Punto de Re-Orden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Punto de re-orden
    </h1>

</section>

<!-- begin panel -->
<!-- end panel -->

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-default">
                <div class="box-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="form-horizontal form-ajust">
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="FechaInicio">
                                            Fecha :
                                        </label>
                                        <div class="col-sm-3">
                                            <input id="txtFechaInicio" name="txtFechaInicio" class="form-control" placeholder="Inicio" />
                                        </div>
                                        <div class="col-sm-3">
                                            <input id="txtFechaFin" name="txtFechaFin" class="form-control" placeholder="Fin" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button id="btnConsult" type="button" class="btn btn-default btn-sm btn-flat" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Consultando...">
                        <i class="fa fa-search-plus" aria-hidden="true"></i>   Consultar
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- begin panel -->
    <div class="box">
        <div class="box-body no-padding">
            <table id="tablaPuntoReOrden" class="table table-striped hover compact">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Item</th>
                        <th>Maxima</th>
                        <th>Minima</th>
                        <th>Critica</th>
                        <th>Inicio</th>
                        <th>Actual</th>
                        <th>Usado</th>
                        <th>MesAnterior</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- end panel -->
</section>

@section scripts {
    <script type="text/javascript" src=@Url.Content("/Scripts/App/Consulta.js")></script>
    <script type="text/javascript">
        $(document).ready(function () {
            Consulta.init();
        });
    </script>
}



