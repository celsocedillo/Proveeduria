                           p.ID_MOVIMIENTO,
                           p.ID_ITEM,
                           p.CANTIDAD_MOVIMIENTO,
                           p.ESTADO,
                           CODIGO = p.EPRTA_ITEM.CODIGO,
                           DESCRIPCION = p.EPRTA_ITEM.DESCRIPCION,
                           UNIDAD = p.EPRTA_ITEM.EPRTA_MEDIDA.NOMBRE
